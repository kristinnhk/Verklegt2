@model Stoker.Models.ViewModel

@{
    ViewBag.Title = "Index";
}


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="col-md-6">
        @Html.Partial("NewsFeedPartial")
    </div>
    <div class="col-md-8"> 
        <fieldset>
            <legend>New Comment</legend>
            @using (@Html.BeginForm("SubmitThreadComment", "ThreadDetail", FormMethod.Post))
            {
                <div class="container">
                    <input type="text" value="Title" name="titleInThread" class="col-lg-3 form-control" />
                    <input type="file" name="imgFileInThread" id="ImageFile" accept="image/*" />
                </div>
                <div class="container">
                    <textarea name="contentInThread" class="col-lg-12 form-control" style="max-width: 300px">Content</textarea>
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            }
        </fieldset>
    </div>
    <div class="col-md-8">
        @foreach (var comment in Model.threads.First().comments)
        {
            <div id="commentHeader">
                <span>@comment.commentAuthor</span>
                <span>@comment.dateCreated</span>
                <span>@comment.likes</span>
            </div>
            <div id="commentContent">
                <span>@comment.content</span>
            </div>
        }
    </div>
</body>
</html>
