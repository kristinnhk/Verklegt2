@model Stoker.Models.ViewModel

@{
    ViewBag.Title = "Index";
}


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="col-md-6">
        @Html.Partial("NewsFeedPartial")
    </div>
    <div class="col-md-8"> 
        <fieldset>
            <legend>New comment</legend>
            @using (@Html.BeginForm("SubmitUserThread", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="container">
                    <textarea name="commentContent" class="col-lg-12 form-control" style="max-width: 300px">Content</textarea>
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            }
        </fieldset> 
    </div>
    <div class="col-md-8">
        @foreach (var comment in Model.threads.First().comments)
        {
            <div id="commentHeader">
                <span>@comment.commentAuthor</span>
                <span>@comment.dateCreated</span>
                <span>@comment.likes</span>
            </div>
            <div id="commentContent">
                <span>@comment.content</span>
            </div>
        }
    </div>
</body>
</html>
