@{
    ViewBag.Title = "AddGroupView";
		Layout = "~/Views/Shared/_LayoutNoSidebar.cshtml";
}
@model Stoker.Models.GroupModel


<head>
    <title>"Create new group"</title>
</head>
<body>
    @Html.Partial("HeaderPartialView")
    <div id="photoContainer">

    </div>
    <div class="form-group">
        @using (Html.BeginForm("Add", "AddGroup", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
        {       
                
            <div class="col-md-4">
                <h3>Set the title of your group</h3>
                <input type="text" name="titleInGroup" id="title" class="col-lg-3 form-control" />
            </div>
                <div class="col-md-4">
                   <h3>Change the about me section of your group</h3>
                    <textarea name="aboutInGroup" class="col-lg-4 form-control" id="about" style="max-width: 300px"></textarea>
                </div>
    <div class="col-md-12">
        <div class="col-md-4">
                <input type="submit" class="btn btn-default" value="Create group" id="submitGroup" />
        </div>
        <div class="col-md-4">
            <h3>Add a photo to your group profile</h3>
            <input type="file" value="Photo" name="photoIngroup" />
        </div>
    </div>
        }
        
    </div>
    <div class="col-md-4" id="groupDiv">

    </div>

    @Html.Partial("FooterPartialView")



    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/AddGroupScripts.js" type="text/javascript"></script>
</body>