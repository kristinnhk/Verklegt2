@model Stoker.Models.InterestModel

@{
    ViewBag.Title = "AddInterestView";
    Layout = "~/Views/Shared/_LayoutNoSidebar.cshtml";
}

<head>
    <title>"Create new group"</title>
</head>
<body>
    @Html.Partial("HeaderPartialView")
    <div id="photoContainer">

    </div>
    <div class="form-group">
        @using (Html.BeginForm("Add", "AddInterest", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
        {

            <div class="col-md-4">
                <h3>Set the title of your group</h3>
                <input type="text" name="nameInInterest" id="name" class="col-lg-3 form-control" />
            </div>
            <div class="col-md-12">
                <div class="col-md-4">
                    <input type="submit" class="btn btn-default" value="Create interest" id="submitInterest" />
                </div>
            </div>
        }

    </div>
    <div class="col-md-4" id="interestDiv">

    </div>

    @Html.Partial("FooterPartialView")



    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/AddInterestScripts.js" type="text/javascript"></script>
</body>

