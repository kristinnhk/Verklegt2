@model Stoker.Models.ViewModel

<nav class="navbar-left col-md-2" id="sidebarEveryPage">
	<link href="~/Content/FrameStyleSheet.css" rel="stylesheet" />
	<div class="interestsSidebar">
		<h3>Interests</h3>
		<ul class="list-group">
			@if ((Model.sidebar.userInterests == null) || (Model.sidebar.userInterests.Count == 0))
			{
				<li class="list-group-item">No interests</li>
			}
			else
			{
				foreach (var interests in Model.sidebar.userInterests)
				{
					<li class="list-group-item">@Html.ActionLink(interests.name, "Interest", "Interest", new { interestID = interests.interestID },null)</li>
				}
			}
		</ul>
	</div>
	<div class="groupsSidebar">
		<h3>Groups</h3>
		<ul class="list-group">
			@if ((Model.sidebar.userGroups == null) || (Model.sidebar.userGroups.Count == 0))
			{
				<li class="list-group-item">No groups</li>
			}
			else
			{ 
				foreach (var group in Model.sidebar.userGroups)
				{
					<li class="list-group-item">@Html.ActionLink(group.title, "GroupProfile", "GroupProfile",new { groupID = group.groupID }, null)</li>
				}
			}
		</ul>
	</div>
</nav>