@using Stoker.Models
@{
	Layout = "~/Views/Shared/_LayoutForLogin.cshtml";
}
<body id="loginBody">
    <link href="~/Content/FrameStyleSheet.css" rel="stylesheet" />
    <div class="row text-center">
        <img src="~/Content/Images/Stoker-logo.png" style="width: 130px;" />
    </div>

    <div class="row">
        <div class="col-md-6">
            @Html.Partial("LoginPartial")
        </div>
        <div class="col-md-6">
            @Html.Partial("SignupPartial")
        </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
