@model Stoker.Models.ViewModel

@{
    ViewBag.Title = "Interest";
}
@section JavaScript
{
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/InterestJS.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/NewsFeed.js")"></script>
}
<div class="container">
    <input type="hidden" value="@Model.interests[0].interestID" id="idInterest" />
    <h2>@Model.interests[0].name</h2>
        <input type="button" class="btn btn-primary" value="Follow" id="interestButton"/>
</div>
<div class="col-lg-12 container">
    <fieldset>
        <legend>New Thread</legend>
        @using (@Html.BeginForm("SubmitInterestThread", "Interest", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="container">
                <input type="text" placeholder="Title" name="titleInThread" class="col-lg-3 form-control" />
                <input type="file" name="imgFileInThread" id="ImageFile" accept="image/*" />
                <input type="hidden" name="interestID" value="@Model.interests[0].interestID" />
            </div>
            <div class="container">
                <textarea name="contentInThread" placeholder="Content" class="col-lg-12 form-control" style="max-width: 300px"></textarea>
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        }
    </fieldset>
</div>
<div>
    <select name="filterBy" id="filterBy">
        <option value="2">Interests you are following</option>
    </select>
</div>
<p id="interestIDText" style="display:none;">@Model.interests[0].interestID</p>
@Html.Partial("NewsFeedPartial")

<script src="~/Scripts/InterestJS.js"></script>