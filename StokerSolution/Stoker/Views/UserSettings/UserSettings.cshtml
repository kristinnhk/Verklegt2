@{
	ViewBag.Title = "UserSettingsView";
}
@model Stoker.Models.ViewModel


    <head>
        <title>"User settings"</title>
    </head>
    <body>
        @Html.Partial("HeaderPartialView")
        @*@Html.Partial("SidebarPartialView"
            {)*@
        <div id="photoContainer">
            <img src="@Url.Action("RenderUserImage", new { id = Model.Users[0].Id })" alt="Photo change" width="100" height="100" />
        @*    @using (Html.BeginForm("UpdateImage", "UserSettings", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {*@
            <form action="UpdateImage" method="post" enctype="multipart/form-data">
                <input type="file" name="imgFileInUserSettings" id="ImageFile" accept="image/*" />
                <input type="submit" value="Change Photo" />
            </form>


</div>
        <div>
            <fieldset>
                <legend>About me</legend>
                <textarea id="AboutTextarea"> @if (Model.Users[0] != null)
                                              {
                                                  @Model.Users[0].about
                                              }
                </textarea>
                <span id="AboutMeError">About me section can not be empty</span>
                <button id="AboutSubmit">Change about me</button>
                <button>Create new interest</button>
            </fieldset>
        </div>
        <div class="col-md-4" id="groupDiv">
            <fieldset>
                <ul>
                    @foreach (Stoker.Models.GroupModel group in Model.groups)
{
    <li><input type="checkbox" class="userGroups" name=@group.title value=@group.groupID /> @group.title</li>
}
                </ul>
                <button id="deleteGroupButton"> Delete selected groups</button>
            </fieldset>
        </div>
        <div class="col-md-4" id="interestDiv">
            <fieldset>
                <ul>
                    @foreach (Stoker.Models.InterestModel interest in Model.interests)
                    {

                        <li><input type="checkbox" class="userInterests" name=@interest.name value=@interest.name /> @interest.name</li>
                    }
                </ul>
            <button id="deleteInterestButton"> Delete selected interests</button>
            </fieldset>
        </div>
        <div class="col-md-4">
            <button>Create new group</button>
        </div>

                    @Html.Partial("FooterPartialView")



        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/UserSettingScripts.js" type="text/javascript"></script>
    </body>
